<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Home | Online Auction</title>
    <%- include('components/headers'); %>
    <script src="/js/lib/easytimer.js"></script>
    <script type="text/javascript" src="js/main.js"></script>
    <script src="/js/index.js"></script>
</head>
<style>
    @font-face {
        font-family: 'clockfont';
        src: url('/lib/DSEG7Classic-Bold.woff') format('woff'), /* Chrome 6+, Firefox 3.6+, IE 9+, Safari 5.1+ */
        url('/lib/DSEG7Classic-Bold.ttf') format('truetype'); /* Chrome 4+, Firefox 3.5, Opera 10+, Safari 3â€”5 */
    }
    .timerValues {
        font-family: clockfont;
        font-size: 1em;
    }
    #main{
        margin-top: 3.6em;
        height: 45em;
        background-image: url("/images/e6.png");
        background-size: 100% 100%;
        background-repeat: no-repeat;
        border: 0;
    }
    #main-container{
        padding-top: 9em;
    }
    #main-container .ui.header{
        color: white;
        font-size: 4.3em;
    }
    #main-container .ui.huge.teal.button{
        opacity: 0.9;
    }
    .home-inputs{
        opacity: 0.9;
    }
    #feature-container{
        margin-top: 4em;
    }
    .t5{
       font-size: 2.3em;
    }
    #items-container{
        margin-top: 4em;
    }
    #productlist{
        margin-top: 2em;
        margin-bottom: 5em;
    }
    .highlights{
        border: 1px solid #dddddd;
        border-radius: 2px;
        margin: 10px;
    }
</style>
<body>
<%- include('components/navbar'); %>
<!--Jumbotron-->
<div id="main" class="ui center aligned segment">
    <div class="ui text relaxed container" id="main-container">
        <div class="ui" style="color: white; font-weight: bolder; font-size: 4.5vmax">
            Find A Auction for You
        </div>
        <div class="ui stackable four column grid center aligned">
        <form class="ui form" action="/items/filterByName" method="post">
            <div class="row">
                <div style="height: 1em"></div>
                <div class="three wide column"></div>
                <div class="five wide column ui input">
                    <input type="text" name="name" placeholder="Search by Name of item" class="home-inputs">
                </div>
                <div class="five wide column ui input">
                    <input type="text" name="category" placeholder="Search by Category of item" class="home-inputs">
                </div>
                <div class="three wide column"></div>
            </div>

            <br>
            <button class="ui huge teal button">Find Auction</button>
        </form>
        </div>

    </div>
</div>
<!--Features-->
<div class="ui relaxed container" id="feature-container">
    <div class="ui header center aligned">
        <h1 class="t5"  style="color: dimgrey">Auctionator Highlights</h1>
    </div>
    <br>
    <div class="ui stackable three column grid">
    <!--<div class="ui horizontal segments">-->
        <div class="ui five wide column highlights" >
            <h2 class="ui icon header">
                <i class="wait icon" style="color: darkorange"></i>
                <div class="content">
                    <span style="color: darkorange">Round The Clock Bidding</span>
                    <div class="ui inverted section divider"></div>
                    <div class="sub header">
                        Your auction runs 24x7 to cater to various users around the world.
                        We make sure everyone gets a fair chance to compete.
                    </div>
                </div>
            </h2>
        </div>
        <div class="ui five wide column highlights" >
            <h2 class="ui icon header">
                <i class="alarm outline icon" style="color: limegreen;"></i>
                <div class="content">
                    <span style="color: limegreen;">Live Notifications</span>
                    <div class="ui inverted section divider"></div>
                    <div class="sub header">
                        Get live notification to your items and your own auctions.
                        Whether you win or lose, you get to know it first !!!
                    </div>
                </div>
            </h2>
        </div>
        <div class="ui five wide column highlights">
            <h2 class="ui icon header">
                <i class="privacy icon" style="color: #309ef2;"></i>
                <div class="content">
                    <span style="color: #309ef2;">Privacy</span>
                    <div class="ui inverted section divider"></div>
                    <div class="sub header">
                        Only the product owner gets your contact and no one else !
                        We are dedicated to provide best possible privacy to our users.</div>
                </div>
            </h2>
        </div>
    <!--</div>-->
    </div>
</div>
<!--Items-->
<div class="ui relaxed container" id="items-container">
    <!--Items Heading-->
    <div class="ui header center aligned">
        <h1 class="t5"  style="color: dimgrey">Popular Live Auctions</h1>
    </div>
    <!--Item Cards-->
    <div class="ui special cards container"  id="productlist">
        <% items.forEach((item)=>{%>
        <div class="card"  id="<%= item._id%>" style="margin-left: 5vw ;">
            <div class="blurring dimmable image">
                <div class="ui inverted dimmer">
                    <div class="content" >
                        <div class="center" id="<%= item._id%>">
                            <button class="ui primary button" data-btn="details">View Details</button>
                        </div>
                    </div>
                </div>
                <img  src=<%= item.img%>  style="height: 30vh">
            </div>
            <div class="content">
                <div class="header"><%= item.name %></div>
                <div class="meta">
                    <span class="date"><%= item.category%></span>
                </div>
                <div class="ui statistic">
                    <div class="value" style="font-size: 2em!important; color: red; text-align: left">
                        <%= item.minbid %>
                    </div>
                    <div class="label" data-max-price="<%= item._id %>" style="font-size:1em; color: red; text-align: left">
                        Current Value
                    </div>
                </div>
            </div>
            <div class="extra content" id="timer">
                <div data-timer=<%= item._id %>>
                    <span class="days" style="font-weight: bolder;font-size: 1em "></span>
                    <span style="font-weight: bolder;font-size: 1em ">&nbsp;Days</span>
                    <br>
                    <span class="hours timerValues"></span><span class="timerValues">:</span>
                    <span class="minutes timerValues"></span><span class="timerValues">:</span>
                    <span class="seconds timerValues"></span><span class="timerValues"></span>
                </div>
            </div>
        </div>
        <%})%>
        <div class="ui container center aligned" style="margin-top: 2em">
            <a href="/items?show=all">
            <button class="ui right labeled icon button blue big">
                <i class="right arrow icon"></i>
                <span style="">View All</span>
            </button>
        </a>
        </div>
    </div>

</div>
<%- include('components/footer'); %>
</body>
</html>
